<h1>Edit post</h1>
<div class="post-form">
    <%= form_with model: @post do |form| %>
        <div>
            <%= form.label :title %><br />
            <%= form.text_field :title%>
        </div>
        <div>
            <%= form.label :body %><br />
            <%= form.text_area :body %>
        </div>
        <div>
            <%= form.submit "edit post" %>
            <%= link_to "Destroy", post_path(@post),class: "delete-btn", data: {
                            turbo_method: :delete,
                            turbo_confirm: "Are you sure?"
                          } %>
        </div>
    <% end %>
</div>