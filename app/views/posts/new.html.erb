<h1>Create new post</h1>
<%= @user %>
<div class="post-form">
    <%= form_with model: @post do |form| %>
        <div>
            <%= form.label :title %><br />
            <%= form.text_field :title %>
        </div>
        <div>
            <%= form.label :body %><br />
            <%= form.text_area :body %>
        </div>
        <%= form.submit "Create post" %>
    <% end %>
</div>